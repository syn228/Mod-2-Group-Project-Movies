<h1>Make Changes!</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%=  form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.collection_check_boxes :movie_ids, @movies, :id, :name %><br>
  <%= f.submit "Confirm Changes" %>
<% end %>
